<% if @album.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @album.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </ul>
  </div>
<% end %>

<h1>Editing Album Name: <%= @album.name %></h1>
<%= render partial: 'form' %>
<%= link_to('Back to Album Index', albums_path)%>
